<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#6C63FF</Color>
    <Color x:Key="PrimaryDarkColor">#4834D4</Color>
    <Color x:Key="AccentColor">#A29BFE</Color>
    <Color x:Key="BackgroundColor">#F4F3FF</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="SurfaceElevatedColor">#EEEEF8</Color>
    <Color x:Key="CardColor">#FFFFFF</Color>
    <Color x:Key="CardHoverColor">#F2F1FF</Color>
    <Color x:Key="BorderColor">#D8D6F0</Color>
    <Color x:Key="TextPrimaryColor">#1A1A3E</Color>
    <Color x:Key="TextSecondaryColor">#48489A</Color>
    <Color x:Key="TextMutedColor">#8888B0</Color>
    <Color x:Key="SuccessColor">#27AE60</Color>
    <Color x:Key="DangerColor">#E74C3C</Color>
    <Color x:Key="WarningColor">#F39C12</Color>
    <Color x:Key="SidebarColor">#EDEDF7</Color>
    <Color x:Key="InputBackgroundColor">#EEEEF8</Color>
    <Color x:Key="AlternatingRowColor">#F5F4FF</Color>

    <SolidColorBrush x:Key="PrimaryBrush"         Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush"     Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="AccentBrush"          Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush"      Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush"         Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="{StaticResource SurfaceElevatedColor}"/>
    <SolidColorBrush x:Key="CardBrush"            Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="CardHoverBrush"       Color="{StaticResource CardHoverColor}"/>
    <SolidColorBrush x:Key="BorderBrush"          Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush"     Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush"   Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush"       Color="{StaticResource TextMutedColor}"/>
    <SolidColorBrush x:Key="SuccessBrush"         Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="DangerBrush"          Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="WarningBrush"         Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="SidebarBrush"         Color="{StaticResource SidebarColor}"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}"/>
    <SolidColorBrush x:Key="AlternatingRowBrush"  Color="{StaticResource AlternatingRowColor}"/>

    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6C63FF" Offset="0"/>
        <GradientStop Color="#A29BFE" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="IncomeGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#27AE60" Offset="0"/>
        <GradientStop Color="#2ECC71" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ExpenseGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E74C3C" Offset="0"/>
        <GradientStop Color="#FF6B6B" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#F0F0FA" Offset="0"/>
        <GradientStop Color="#E5E5F2" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="KpiBalanceGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#D6DCFF" Offset="0"/>
        <GradientStop Color="#BEC8FF" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="KpiIncomeGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#C8F0D8" Offset="0"/>
        <GradientStop Color="#A8E4C0" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="KpiExpenseGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFD6D6" Offset="0"/>
        <GradientStop Color="#FFBEBE" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="KpiConverterGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E8D6FF" Offset="0"/>
        <GradientStop Color="#D6BEFF" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
