<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#6C63FF</Color>
    <Color x:Key="PrimaryDarkColor">#4834D4</Color>
    <Color x:Key="AccentColor">#A29BFE</Color>
    <Color x:Key="BackgroundColor">#0F0E17</Color>
    <Color x:Key="SurfaceColor">#1A1A2E</Color>
    <Color x:Key="SurfaceElevatedColor">#16213E</Color>
    <Color x:Key="CardColor">#1E1E3A</Color>
    <Color x:Key="CardHoverColor">#25254A</Color>
    <Color x:Key="BorderColor">#2A2A4A</Color>
    <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#A0A0C0</Color>
    <Color x:Key="TextMutedColor">#606080</Color>
    <Color x:Key="SuccessColor">#27AE60</Color>
    <Color x:Key="DangerColor">#E74C3C</Color>
    <Color x:Key="WarningColor">#F39C12</Color>
    <Color x:Key="SidebarColor">#12122A</Color>
    <Color x:Key="InputBackgroundColor">#1A1A35</Color>
    <Color x:Key="AlternatingRowColor">#0F0F2A</Color>

    <SolidColorBrush x:Key="PrimaryBrush"         Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush"     Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="AccentBrush"          Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush"      Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush"         Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="SurfaceElevatedBrush" Color="{StaticResource SurfaceElevatedColor}"/>
    <SolidColorBrush x:Key="CardBrush"            Color="{StaticResource CardColor}"/>
    <SolidColorBrush x:Key="CardHoverBrush"       Color="{StaticResource CardHoverColor}"/>
    <SolidColorBrush x:Key="BorderBrush"          Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush"     Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush"   Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush"       Color="{StaticResource TextMutedColor}"/>
    <SolidColorBrush x:Key="SuccessBrush"         Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="DangerBrush"          Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="WarningBrush"         Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="SidebarBrush"         Color="{StaticResource SidebarColor}"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}"/>
    <SolidColorBrush x:Key="AlternatingRowBrush"  Color="{StaticResource AlternatingRowColor}"/>

    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6C63FF" Offset="0"/>
        <GradientStop Color="#A29BFE" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="IncomeGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#27AE60" Offset="0"/>
        <GradientStop Color="#2ECC71" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ExpenseGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E74C3C" Offset="0"/>
        <GradientStop Color="#FF6B6B" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#12122A" Offset="0"/>
        <GradientStop Color="#0A0A1A" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="KpiBalanceGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1A2766" Offset="0"/>
        <GradientStop Color="#0F1A4A" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="KpiIncomeGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1A3D2A" Offset="0"/>
        <GradientStop Color="#0F2619" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="KpiExpenseGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#3D1A1A" Offset="0"/>
        <GradientStop Color="#260F0F" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="KpiConverterGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#2A1A3D" Offset="0"/>
        <GradientStop Color="#1A0F26" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>
