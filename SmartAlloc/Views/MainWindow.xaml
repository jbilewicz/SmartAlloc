<Window x:Class="SmartAlloc.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SmartAlloc.ViewModels"
        xmlns:views="clr-namespace:SmartAlloc.Views"
        Title="SmartAlloc – Modern Finance Planner"
        Width="1280" Height="800"
        MinWidth="1024" MinHeight="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TransactionsViewModel}">
            <views:TransactionsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BudgetsViewModel}">
            <views:BudgetsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GoalsViewModel}">
            <views:GoalsView/>
        </DataTemplate>

        <!-- Base title bar button style – flat, no MD chrome -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#28FFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#50FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close button – inherits base, red on hover -->
        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button"
               BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#96281B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="0" Color="#000000" Opacity="0.6"/>
        </Border.Effect>
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource BackgroundColor}"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{DynamicResource SidebarGradientBrush}">
                <Border.BorderBrush>
                    <SolidColorBrush Color="{DynamicResource BorderColor}"/>
                </Border.BorderBrush>
                <Border.BorderThickness>0,0,1,0</Border.BorderThickness>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo area -->
                    <Border Grid.Row="0" Padding="20,24,20,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Border Width="36" Height="36" CornerRadius="10"
                                        Background="{DynamicResource PrimaryGradientBrush}"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="💳" FontSize="18"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="SmartAlloc" FontSize="18" FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Finance Planner" FontSize="11"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       Margin="46,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Navigation -->
                    <StackPanel Grid.Row="1" Margin="12,8">
                        <TextBlock Text="MENU" FontSize="10" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   Margin="12,0,0,10"/>

                        <Button Command="{Binding NavigateToDashboardCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                x:Name="BtnDashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToTransactionsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💸" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Transactions" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToBudgetsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Budgets" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToGoalsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎯" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Goals" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Style="{StaticResource SeparatorStyle}" Margin="0,16"/>

                        <Button Command="{Binding GenerateReportCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="PDF Report" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Bottom info -->
                    <Border Grid.Row="2" Padding="16,14"
                            BorderThickness="0,1,0,0"
                            BorderBrush="{DynamicResource BorderBrush}">
                        <StackPanel>
                            <Button Command="{Binding ToggleThemeCommand}"
                                    Style="{StaticResource NavButtonStyle}"
                                    Margin="-4,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ThemeIcon}" FontSize="15" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding ThemeLabel}" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <TextBlock Text="SmartAlloc v1.0" FontSize="11"
                                       Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBlock Text="Data encrypted AES-256" FontSize="10"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Main content -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Custom title bar -->
                <Border Grid.Row="0"
                        Background="{DynamicResource SurfaceBrush}"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Margin="16,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                            <Button Content="─"
                                    Style="{StaticResource TitleBarButtonStyle}"
                                    Click="MinimizeButton_Click"/>
                            <Button Content="⬜"
                                    Style="{StaticResource TitleBarButtonStyle}"
                                    FontSize="11"
                                    Click="MaximizeButton_Click"/>
                            <Button Content="✕"
                                    Style="{StaticResource TitleBarCloseButtonStyle}"
                                    Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- View content -->
                <ContentControl Grid.Row="1"
                                Content="{Binding CurrentView}"
                                Margin="0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
