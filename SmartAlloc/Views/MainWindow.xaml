<Window x:Class="SmartAlloc.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SmartAlloc.ViewModels"
        xmlns:views="clr-namespace:SmartAlloc.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="SmartAlloc â€“ Modern Finance Planner"
        Width="1280" Height="800"
        MinWidth="1024" MinHeight="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        PreviewKeyDown="Window_KeyDown">

    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+1" Command="{Binding NavigateToDashboardCommand}"/>
        <KeyBinding Gesture="Ctrl+2" Command="{Binding NavigateToTransactionsCommand}"/>
        <KeyBinding Gesture="Ctrl+3" Command="{Binding NavigateToBudgetsCommand}"/>
        <KeyBinding Gesture="Ctrl+4" Command="{Binding NavigateToGoalsCommand}"/>
        <KeyBinding Gesture="Ctrl+5" Command="{Binding NavigateToStatisticsCommand}"/>
        <KeyBinding Gesture="Ctrl+6" Command="{Binding NavigateToSettingsCommand}"/>
        <KeyBinding Gesture="Ctrl+7" Command="{Binding NavigateToCalendarCommand}"/>
        <KeyBinding Gesture="Ctrl+N" Command="{Binding NavigateToTransactionsCommand}"/>
        <KeyBinding Gesture="Ctrl+R" Command="{Binding GenerateReportCommand}"/>
        <KeyBinding Gesture="Ctrl+T" Command="{Binding ToggleThemeCommand}"/>
        <KeyBinding Gesture="Ctrl+I" Command="{Binding TogglePrivacyCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <QuadraticEase x:Key="FadeEase" EasingMode="EaseOut"/>

        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TransactionsViewModel}">
            <views:TransactionsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BudgetsViewModel}">
            <views:BudgetsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GoalsViewModel}">
            <views:GoalsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:StatisticsViewModel}">
            <views:StatisticsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CalendarViewModel}">
            <views:CalendarView/>
        </DataTemplate>

        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#28FFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#50FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button"
               BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#96281B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="0" Color="#000000" Opacity="0.6"/>
        </Border.Effect>
        <Grid>
            <Grid x:Name="MainContent">
                <Grid.Background>
                    <SolidColorBrush Color="{DynamicResource BackgroundColor}"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{DynamicResource SidebarGradientBrush}">
                <Border.BorderBrush>
                    <SolidColorBrush Color="{DynamicResource BorderColor}"/>
                </Border.BorderBrush>
                <Border.BorderThickness>0,0,1,0</Border.BorderThickness>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Padding="20,24,20,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Border Width="36" Height="36" CornerRadius="10"
                                        Background="{DynamicResource PrimaryGradientBrush}"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="ðŸ’³" FontSize="18"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="SmartAlloc" FontSize="18" FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Finance Planner" FontSize="11"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       Margin="46,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Row="1" Margin="12,8">
                        <TextBlock Text="{Binding NavMenu}" FontSize="10" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   Margin="12,0,0,10"/>

                        <Button Command="{Binding NavigateToDashboardCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                x:Name="BtnDashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“Š" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding DataContext.NavDashboard, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToTransactionsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ’¸" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding DataContext.NavTransactions, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToBudgetsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding DataContext.NavBudgets, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToGoalsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸŽ¯" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding DataContext.NavGoals, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToStatisticsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“ˆ" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding DataContext.NavStatistics, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToCalendarCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“…" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding DataContext.NavCalendar, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Style="{StaticResource SeparatorStyle}" Margin="0,16"/>

                        <Button Command="{Binding GenerateReportCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“„" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding DataContext.NavPdfReport, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Style="{StaticResource SeparatorStyle}" Margin="0,8"/>

                        <Button Command="{Binding NavigateToSettingsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âš™ï¸" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="{Binding DataContext.NavSettings, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Border Grid.Row="2" Padding="16,14"
                            BorderThickness="0,1,0,0"
                            BorderBrush="{DynamicResource BorderBrush}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="32" Height="32" CornerRadius="16"
                                        Background="#3A3A5A" ClipToBounds="True" Margin="0,0,10,0">
                                    <Grid>
                                        <TextBlock Text="ðŸ‘¤" FontSize="16"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Image Source="{Binding CurrentUserAvatar}" Width="32" Height="32"
                                               Stretch="UniformToFill"/>
                                    </Grid>
                                </Border>
                                <TextBlock Text="{Binding CurrentUserName}" FontSize="13" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                           MaxWidth="120"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="ðŸ’±" FontSize="13" VerticalAlignment="Center" Margin="4,0,8,0"
                                           Foreground="{DynamicResource TextMutedBrush}"/>
                                <ComboBox ItemsSource="{Binding CurrencyDisplay.AvailableCurrencies}"
                                          SelectedItem="{Binding CurrencyDisplay.SelectedCurrency}"
                                          Style="{StaticResource DarkComboStyle}"
                                          Width="90" Padding="8,5" FontSize="12"/>
                            </StackPanel>

                            <Button Command="{Binding ToggleThemeCommand}"
                                    Style="{StaticResource NavButtonStyle}"
                                    Margin="-4,0,0,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ThemeIcon}" FontSize="15" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding ThemeLabel}" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource NavButtonStyle}"
                                    Click="LogoutButton_Click"
                                    Margin="-4,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸšª" FontSize="15" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding DataContext.NavLogOut, RelativeSource={RelativeSource AncestorType=Window}}" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <TextBlock Text="SmartAlloc v1.0" FontSize="11"
                                       Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBlock Text="Data encrypted AES-256" FontSize="10"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{DynamicResource SurfaceBrush}"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Margin="16,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                            <Button Command="{Binding TogglePrivacyCommand}"
                                    ToolTip="{Binding [Shortcut.PrivacyTip], Source={StaticResource Loc}}">
                                <Grid Width="16" Height="16">
                                    <TextBlock Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets" FontSize="14"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                                    <Line X1="2" Y1="14" X2="14" Y2="2" StrokeThickness="2"
                                          Visibility="{Binding Privacy.IsPrivate, Converter={StaticResource BoolToVisConverter}}">
                                        <Line.Stroke>
                                            <SolidColorBrush Color="#F39C12"/>
                                        </Line.Stroke>
                                    </Line>
                                </Grid>
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource TitleBarButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Privacy.IsPrivate}" Value="True">
                                                <Setter Property="Background" Value="#30F39C12"/>
                                                <Setter Property="Foreground" Value="#F39C12"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="?"
                                    Style="{StaticResource TitleBarButtonStyle}"
                                    Click="HelpButton_Click"
                                    ToolTip="{Binding [Shortcut.ShortcutsTip], Source={StaticResource Loc}}"
                                    FontWeight="Bold"/>
                            <Button Content="â”€"
                                    Style="{StaticResource TitleBarButtonStyle}"
                                    Click="MinimizeButton_Click"/>
                            <Button Content="â¬œ"
                                    Style="{StaticResource TitleBarButtonStyle}"
                                    FontSize="11"
                                    Click="MaximizeButton_Click"/>
                            <Button Content="âœ•"
                                    Style="{StaticResource TitleBarCloseButtonStyle}"
                                    Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ContentControl Grid.Row="1"
                                Content="{Binding CurrentView}"
                                Margin="0">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="ContentControl.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0" To="1" Duration="0:0:0.3"
                                                             EasingFunction="{StaticResource FadeEase}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <materialDesign:Snackbar Grid.Row="1"
                                         x:Name="SnackbarElement"
                                         MessageQueue="{materialDesign:MessageQueue}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Bottom"
                                         Margin="0,0,0,16"/>
            </Grid>
            </Grid>

        <Border x:Name="ShortcutsOverlay" Visibility="Collapsed"
                Background="#CC000000" CornerRadius="16">
            <Border Background="{DynamicResource CardBrush}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    CornerRadius="16" Width="520" Padding="28,24"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="48" ShadowDepth="0" Color="#000000" Opacity="0.7"/>
                </Border.Effect>
                <StackPanel>

                    <Grid Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âŒ¨ï¸" FontSize="22" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding [Shortcut.Title], Source={StaticResource Loc}}" FontSize="18" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding [Shortcut.CloseHint], Source={StaticResource Loc}}" FontSize="11"
                                       Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="Transparent" BorderThickness="0"
                                Foreground="{DynamicResource TextMutedBrush}"
                                FontSize="14" Padding="8,4" Cursor="Hand"
                                Click="CloseShortcuts_Click"/>
                    </Grid>

                    <TextBlock Text="{Binding [Shortcut.Navigation], Source={StaticResource Loc}}" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+1" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Nav.Dashboard], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+2" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Nav.Transactions], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+3" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Nav.Budgets], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+4" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Nav.Goals], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+5" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Nav.Statistics], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,16"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+6" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Nav.Settings], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>

                    <TextBlock Text="{Binding [Shortcut.Actions], Source={StaticResource Loc}}" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+N" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Shortcut.NewTx], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+R" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Shortcut.GenPdf], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+T" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Shortcut.ToggleTheme], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+L" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Shortcut.LockScreen], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,16"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+W" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Shortcut.Minimize], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>

                    <TextBlock Text="{Binding [Shortcut.General], Source={StaticResource Loc}}" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="F1" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Shortcut.ToggleOverlay], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,0"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Esc" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="{Binding [Shortcut.CloseOverlay], Source={StaticResource Loc}}" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>

                </StackPanel>
            </Border>
        </Border>

        <Border x:Name="LoginOverlay" Visibility="Collapsed"
                Background="#F0000000" CornerRadius="16">
            <Grid>
                <Border Height="44" VerticalAlignment="Top"
                        Background="Transparent"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                VerticalAlignment="Center" Margin="0,0,8,0">
                        <Button Content="â”€"
                                Style="{StaticResource TitleBarButtonStyle}"
                                Click="MinimizeButton_Click"/>
                        <Button Content="â¬œ"
                                Style="{StaticResource TitleBarButtonStyle}"
                                FontSize="11"
                                Click="MaximizeButton_Click"/>
                        <Button Content="âœ•"
                                Style="{StaticResource TitleBarCloseButtonStyle}"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Border>
                <views:LoginView x:Name="LoginViewControl" Margin="0,44,0,0"/>
            </Grid>
        </Border>
        </Grid>
    </Border>
</Window>
