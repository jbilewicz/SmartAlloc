<Window x:Class="SmartAlloc.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SmartAlloc.ViewModels"
        xmlns:views="clr-namespace:SmartAlloc.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="SmartAlloc – Modern Finance Planner"
        Width="1280" Height="800"
        MinWidth="1024" MinHeight="640"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        PreviewKeyDown="Window_KeyDown">

    <!-- Keyboard shortcuts -->
    <Window.InputBindings>
        <KeyBinding Gesture="Ctrl+1" Command="{Binding NavigateToDashboardCommand}"/>
        <KeyBinding Gesture="Ctrl+2" Command="{Binding NavigateToTransactionsCommand}"/>
        <KeyBinding Gesture="Ctrl+3" Command="{Binding NavigateToBudgetsCommand}"/>
        <KeyBinding Gesture="Ctrl+4" Command="{Binding NavigateToGoalsCommand}"/>
        <KeyBinding Gesture="Ctrl+5" Command="{Binding NavigateToStatisticsCommand}"/>
        <KeyBinding Gesture="Ctrl+6" Command="{Binding NavigateToSettingsCommand}"/>
        <KeyBinding Gesture="Ctrl+N" Command="{Binding NavigateToTransactionsCommand}"/>
        <KeyBinding Gesture="Ctrl+R" Command="{Binding GenerateReportCommand}"/>
        <KeyBinding Gesture="Ctrl+T" Command="{Binding ToggleThemeCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <QuadraticEase x:Key="FadeEase" EasingMode="EaseOut"/>

        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TransactionsViewModel}">
            <views:TransactionsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BudgetsViewModel}">
            <views:BudgetsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GoalsViewModel}">
            <views:GoalsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:StatisticsViewModel}">
            <views:StatisticsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>

        <!-- Base title bar button style – flat, no MD chrome -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#28FFFFFF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#50FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close button – inherits base, red on hover -->
        <Style x:Key="TitleBarCloseButtonStyle" TargetType="Button"
               BasedOn="{StaticResource TitleBarButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#96281B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="40" ShadowDepth="0" Color="#000000" Opacity="0.6"/>
        </Border.Effect>
        <!-- Wrapper grid to allow login overlay on top -->
        <Grid>
            <Grid x:Name="MainContent">
                <Grid.Background>
                    <SolidColorBrush Color="{DynamicResource BackgroundColor}"/>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="{DynamicResource SidebarGradientBrush}">
                <Border.BorderBrush>
                    <SolidColorBrush Color="{DynamicResource BorderColor}"/>
                </Border.BorderBrush>
                <Border.BorderThickness>0,0,1,0</Border.BorderThickness>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Logo area -->
                    <Border Grid.Row="0" Padding="20,24,20,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <Border Width="36" Height="36" CornerRadius="10"
                                        Background="{DynamicResource PrimaryGradientBrush}"
                                        Margin="0,0,10,0">
                                    <TextBlock Text="💳" FontSize="18"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="SmartAlloc" FontSize="18" FontWeight="Bold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Finance Planner" FontSize="11"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       Margin="46,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Navigation -->
                    <StackPanel Grid.Row="1" Margin="12,8">
                        <TextBlock Text="MENU" FontSize="10" FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextMutedBrush}"
                                   Margin="12,0,0,10"/>

                        <Button Command="{Binding NavigateToDashboardCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                x:Name="BtnDashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToTransactionsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💸" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Transactions" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToBudgetsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Budgets" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToGoalsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎯" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Goals" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding NavigateToStatisticsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,4,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Statistics" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Style="{StaticResource SeparatorStyle}" Margin="0,16"/>

                        <Button Command="{Binding GenerateReportCommand}"
                                Style="{StaticResource NavButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="PDF Report" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Style="{StaticResource SeparatorStyle}" Margin="0,8"/>

                        <Button Command="{Binding NavigateToSettingsCommand}"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="0,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="16" Margin="0,0,12,0"/>
                                <TextBlock Text="Settings" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Bottom info -->
                    <Border Grid.Row="2" Padding="16,14"
                            BorderThickness="0,1,0,0"
                            BorderBrush="{DynamicResource BorderBrush}">
                        <StackPanel>
                            <!-- Current user -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="32" Height="32" CornerRadius="16"
                                        Background="#3A3A5A" ClipToBounds="True" Margin="0,0,10,0">
                                    <Grid>
                                        <TextBlock Text="👤" FontSize="16"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Image Source="{Binding CurrentUserAvatar}" Width="32" Height="32"
                                               Stretch="UniformToFill"/>
                                    </Grid>
                                </Border>
                                <TextBlock Text="{Binding CurrentUserName}" FontSize="13" FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                                           MaxWidth="120"/>
                            </StackPanel>
                            <Button Command="{Binding ToggleThemeCommand}"
                                    Style="{StaticResource NavButtonStyle}"
                                    Margin="-4,0,0,4">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ThemeIcon}" FontSize="15" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding ThemeLabel}" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource NavButtonStyle}"
                                    Click="LogoutButton_Click"
                                    Margin="-4,0,0,10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🚪" FontSize="15" Margin="0,0,10,0"/>
                                    <TextBlock Text="Log Out" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <TextBlock Text="SmartAlloc v1.0" FontSize="11"
                                       Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBlock Text="Data encrypted AES-256" FontSize="10"
                                       Foreground="{DynamicResource TextMutedBrush}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Main content -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Custom title bar -->
                <Border Grid.Row="0"
                        Background="{DynamicResource SurfaceBrush}"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Margin="16,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                            <Button Content="?"
                                    Style="{StaticResource TitleBarButtonStyle}"
                                    Click="HelpButton_Click"
                                    ToolTip="Keyboard shortcuts (F1)"
                                    FontWeight="Bold"/>
                            <Button Content="─"
                                    Style="{StaticResource TitleBarButtonStyle}"
                                    Click="MinimizeButton_Click"/>
                            <Button Content="⬜"
                                    Style="{StaticResource TitleBarButtonStyle}"
                                    FontSize="11"
                                    Click="MaximizeButton_Click"/>
                            <Button Content="✕"
                                    Style="{StaticResource TitleBarCloseButtonStyle}"
                                    Click="CloseButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- View content with fade animation -->
                <ContentControl Grid.Row="1"
                                Content="{Binding CurrentView}"
                                Margin="0">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="ContentControl.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                             From="0" To="1" Duration="0:0:0.3"
                                                             EasingFunction="{StaticResource FadeEase}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>

                <!-- Snackbar -->
                <materialDesign:Snackbar Grid.Row="1"
                                         x:Name="SnackbarElement"
                                         MessageQueue="{materialDesign:MessageQueue}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Bottom"
                                         Margin="0,0,0,16"/>
            </Grid>
            </Grid>

        <!-- Shortcuts overlay (F1 / ? button) -->
        <Border x:Name="ShortcutsOverlay" Visibility="Collapsed"
                Background="#CC000000" CornerRadius="16">
            <Border Background="{DynamicResource CardBrush}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                    CornerRadius="16" Width="520" Padding="28,24"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="48" ShadowDepth="0" Color="#000000" Opacity="0.7"/>
                </Border.Effect>
                <StackPanel>

                    <!-- Header -->
                    <Grid Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⌨️" FontSize="22" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Keyboard Shortcuts" FontSize="18" FontWeight="Bold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="  — press F1 or Esc to close" FontSize="11"
                                       Foreground="{DynamicResource TextMutedBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="Transparent" BorderThickness="0"
                                Foreground="{DynamicResource TextMutedBrush}"
                                FontSize="14" Padding="8,4" Cursor="Hand"
                                Click="CloseShortcuts_Click"/>
                    </Grid>

                    <!-- NAVIGATION -->
                    <TextBlock Text="NAVIGATION" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+1" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Dashboard" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+2" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Transactions" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+3" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Budgets" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+4" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Goals" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+5" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Statistics" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,16"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+6" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Settings" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>

                    <!-- ACTIONS -->
                    <TextBlock Text="ACTIONS" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+N" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="New Transaction (go to Transactions)" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+R" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Generate PDF Report" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+T" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Toggle Light / Dark theme" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+L" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Lock screen now" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,16"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Ctrl+W" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Minimize window" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>

                    <!-- GENERAL -->
                    <TextBlock Text="GENERAL" FontSize="10" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextMutedBrush}" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,6"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="F1" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Show / hide this shortcuts overlay" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                    <Grid Margin="0,0,0,0"><Grid.ColumnDefinitions><ColumnDefinition Width="160"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="6" Padding="10,3" BorderThickness="1" BorderBrush="{DynamicResource BorderBrush}" HorizontalAlignment="Left"><TextBlock Text="Esc" FontFamily="Consolas" FontSize="12" Foreground="{DynamicResource AccentBrush}"/></Border>
                        <TextBlock Grid.Column="1" Text="Close overlay  /  go to Dashboard" FontSize="13" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>

                </StackPanel>
            </Border>
        </Border>

        <!-- Login overlay -->
        <Border x:Name="LoginOverlay" Visibility="Collapsed"
                Background="#F0000000" CornerRadius="16">
            <Grid>
                <!-- Title bar for login screen -->
                <Border Height="44" VerticalAlignment="Top"
                        Background="Transparent"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                VerticalAlignment="Center" Margin="0,0,8,0">
                        <Button Content="─"
                                Style="{StaticResource TitleBarButtonStyle}"
                                Click="MinimizeButton_Click"/>
                        <Button Content="⬜"
                                Style="{StaticResource TitleBarButtonStyle}"
                                FontSize="11"
                                Click="MaximizeButton_Click"/>
                        <Button Content="✕"
                                Style="{StaticResource TitleBarCloseButtonStyle}"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </Border>
                <views:LoginView x:Name="LoginViewControl" Margin="0,44,0,0"/>
            </Grid>
        </Border>
        </Grid>
    </Border>
</Window>
