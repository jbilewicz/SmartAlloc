<UserControl x:Class="SmartAlloc.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:svc="clr-namespace:SmartAlloc.Services"
             Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="28,20,28,28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,4">
            <TextBlock Text="{Binding [Title.Dashboard], Source={StaticResource Loc}}" Style="{StaticResource PageTitleStyle}"/>
            <TextBlock Text="{Binding [Title.DashboardSub], Source={StaticResource Loc}}" Style="{StaticResource PageSubtitleStyle}"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource KpiCardStyle}"
                    Background="{DynamicResource KpiBalanceGradientBrush}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Width="32" Height="32" CornerRadius="8"
                                Background="{StaticResource PrimaryGradientBrush}" Margin="0,0,10,0">
                            <TextBlock Text="ðŸ’°" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="{Binding [Label.Balance], Source={StaticResource Loc}}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock FontSize="22" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"
                               TextTrimming="CharacterEllipsis">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource MoneyDisplayConverter}">
                                <Binding Path="Balance"/>
                                <Binding Source="{x:Static svc:PrivacyService.Current}" Path="IsPrivate"/>
                                <Binding Source="{x:Static svc:CurrencyDisplayService.Current}" Path="SelectedCurrency"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource KpiCardStyle}"
                    Background="{DynamicResource KpiIncomeGradientBrush}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Width="32" Height="32" CornerRadius="8"
                                Background="{StaticResource IncomeGradientBrush}" Margin="0,0,10,0">
                            <TextBlock Text="ðŸ“ˆ" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="{Binding [Label.Income], Source={StaticResource Loc}}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock FontSize="22" FontWeight="Bold" Foreground="{DynamicResource SuccessBrush}"
                               TextTrimming="CharacterEllipsis">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource MoneyDisplayConverter}">
                                <Binding Path="TotalIncome"/>
                                <Binding Source="{x:Static svc:PrivacyService.Current}" Path="IsPrivate"/>
                                <Binding Source="{x:Static svc:CurrencyDisplayService.Current}" Path="SelectedCurrency"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="4" Style="{StaticResource KpiCardStyle}"
                    Background="{DynamicResource KpiExpenseGradientBrush}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Width="32" Height="32" CornerRadius="8"
                                Background="{StaticResource ExpenseGradientBrush}" Margin="0,0,10,0">
                            <TextBlock Text="ðŸ“‰" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="{Binding [Label.Expenses], Source={StaticResource Loc}}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock FontSize="22" FontWeight="Bold" Foreground="{DynamicResource DangerBrush}"
                               TextTrimming="CharacterEllipsis">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource MoneyDisplayConverter}">
                                <Binding Path="TotalExpense"/>
                                <Binding Source="{x:Static svc:PrivacyService.Current}" Path="IsPrivate"/>
                                <Binding Source="{x:Static svc:CurrencyDisplayService.Current}" Path="SelectedCurrency"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="6" Style="{StaticResource KpiCardStyle}"
                    Background="{DynamicResource KpiConverterGradientBrush}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Border Width="32" Height="32" CornerRadius="8" Margin="0,0,10,0">
                            <Border.Background>
                                <LinearGradientBrush>
                                    <GradientStop Color="#A29BFE" Offset="0"/>
                                    <GradientStop Color="#6C63FF" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="ðŸ’±" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="{Binding [Label.DisplayCurrency], Source={StaticResource Loc}}" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="{Binding [Label.DisplayCurrencyHint], Source={StaticResource Loc}}" FontSize="10"
                               Foreground="{DynamicResource TextMutedBrush}" TextWrapping="Wrap" Margin="0,0,0,6"/>
                    <TextBlock FontSize="15" FontWeight="Bold"
                               Foreground="{DynamicResource AccentBrush}">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource MoneyDisplayConverter}">
                                <Binding Path="Balance"/>
                                <Binding Source="{x:Static svc:PrivacyService.Current}" Path="IsPrivate"/>
                                <Binding Source="{x:Static svc:CurrencyDisplayService.Current}" Path="SelectedCurrency"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <Button Content="{Binding [Btn.RefreshRates], Source={StaticResource Loc}}"
                            Command="{Binding RefreshRatesCommand}"
                            Style="{StaticResource OutlineButtonStyle}"
                            Padding="8,5" FontSize="11" Margin="0,8,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="2" Style="{StaticResource GlassCardStyle}" Margin="0,0,0,14" Padding="14,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ¦ " FontSize="14"/>
                <TextBlock Text="{Binding RateInfo}" FontSize="11"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding LastUpdated}" FontSize="10"
                           Foreground="{DynamicResource TextMutedBrush}"
                           VerticalAlignment="Center" Margin="16,0,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="3" MinHeight="200">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="1.4*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource GlassCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding [Section.ExpenseBreakdown], Source={StaticResource Loc}}" Style="{StaticResource SectionTitleStyle}"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,-8,0,12">
                        <TextBlock Text="{Binding [Label.CurrentMonth], Source={StaticResource Loc}}" FontSize="11"
                                   Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBlock Text="{Binding Source={x:Static svc:CurrencyDisplayService.Current}, Path=SelectedCurrency, Mode=OneWay}"
                                   FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"/>
                    </StackPanel>
                    <lvc:PieChart Grid.Row="2"
                                  Series="{Binding PieSeries}"
                                  MinHeight="160"
                                  LegendPosition="Right"
                                  LegendTextPaint="{Binding LegendTextPaint}"
                                  UseLayoutRounding="True"/>
                </Grid>
            </Border>

            <Border Grid.Column="2" Style="{StaticResource GlassCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding [Section.BalanceHistory], Source={StaticResource Loc}}" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBlock Grid.Row="1" Text="{Binding [Label.Last6Months], Source={StaticResource Loc}}" FontSize="11"
                               Foreground="{DynamicResource TextMutedBrush}" Margin="0,-8,0,12"/>
                    <lvc:CartesianChart Grid.Row="2"
                                        Series="{Binding LineSeries}"
                                        XAxes="{Binding XAxes}"
                                        YAxes="{Binding YAxes}"
                                        MinHeight="160"
                                        ZoomMode="X"
                                        UseLayoutRounding="True"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
