<Window x:Class="SmartAlloc.Views.CurrencyPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate PDF Report"
        Width="340" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1A1A2E"
        Foreground="White">

    <StackPanel Margin="28,24">
        <TextBlock Text="PDF Currency" FontSize="18" FontWeight="Bold"
                   Foreground="White" Margin="0,0,0,6"/>
        <TextBlock Text="Choose the currency for the report values."
                   FontSize="12" Foreground="#888" TextWrapping="Wrap" Margin="0,0,0,20"/>

        <ListBox x:Name="CurrencyList"
                 Background="Transparent" BorderThickness="0"
                 Margin="0,0,0,20">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6" Margin="0,2">
                                    <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#6C63FF"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2A2A4A"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBoxItem Content="PLN – Polish Zloty" Tag="PLN"/>
            <ListBoxItem Content="USD – US Dollar" Tag="USD"/>
            <ListBoxItem Content="EUR – Euro" Tag="EUR"/>
            <ListBoxItem Content="CHF – Swiss Franc" Tag="CHF"/>
            <ListBoxItem Content="GBP – British Pound" Tag="GBP"/>
        </ListBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel"
                    Width="90" Height="36" Margin="0,0,10,0"
                    Background="#2A2A4A" Foreground="White"
                    BorderThickness="1" BorderBrush="#444"
                    Cursor="Hand" Click="Cancel_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="GenerateButton" Content="Generate PDF"
                    Width="120" Height="36"
                    Background="#6C63FF" Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand" Click="Generate_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
