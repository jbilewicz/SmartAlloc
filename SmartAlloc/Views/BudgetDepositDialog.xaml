<Window x:Class="SmartAlloc.Views.BudgetDepositDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deposit to Budget"
        Width="380" Height="240"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="16" Padding="24"
            Background="#1E1E3A" BorderBrush="#3A3A5A" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="#000000" Opacity="0.6"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock x:Name="TitleText" FontSize="16" FontWeight="Bold"
                       Foreground="White" Margin="0,0,0,4"/>
            <TextBlock x:Name="SubtitleText" FontSize="11" Foreground="#888"
                       Margin="0,0,0,16"/>

            <TextBlock Text="Amount to deposit" FontSize="11" Foreground="#AAA"
                       Margin="0,0,0,4"/>
            <TextBox x:Name="AmountBox" FontSize="14" Padding="10,8"
                     Background="#2A2A4A" Foreground="White" BorderBrush="#3A3A5A"
                     BorderThickness="1" TextChanged="AmountBox_TextChanged"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" Padding="16,8"
                        Background="Transparent" Foreground="#AAA"
                        BorderBrush="#3A3A5A" BorderThickness="1"
                        Cursor="Hand" Click="Cancel_Click"
                        Margin="0,0,8,0"/>
                <Button Content="Deposit" Padding="16,8"
                        Background="#27AE60" Foreground="White"
                        BorderThickness="0" Cursor="Hand" FontWeight="SemiBold"
                        Click="Deposit_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
